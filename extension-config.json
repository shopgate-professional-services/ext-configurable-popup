{
  "version": "1.0.0-beta.2",
  "id": "@shopgate-project/configurable-popup",
  "components": [
    {
      "id": "subscriptions",
      "path": "frontend/subscriptions/index.js",
      "type": "subscribers"
    },
    {
      "id": "popup",
      "path": "frontend/reducers/index.js",
      "type": "reducers"
    }
  ],
  "configuration": {
    "popup": {
      "type": "admin",
      "destination": "frontend",
      "default": {
        "minDaysBetweenPopups": 0,
        "popups": [
          {
            "id": "popupId1",
            "title": "popup title 1",
            "content": "<p>HTML Content</p><img style='margin: 0 auto' src='https://downloadwap.com/thumbs3/screensavers/d/new/cartoon-anime/homer-108414.gif'><p><b>with FAT text...</b></p>",
            "enabled": true,
            "button": {
              "confirmLabel": "Click!",
              "dismissLabel": "D'OH!"
            },
            "action": {
              "link": "https://shopgate.com"
            },
            "trigger": {
              "type": "appStarts",
              "value": 1
            },
            "maxOccurrenceCount": 200,
            "maxRejectionCount": 2
          },
          {
            "id": "popupId2",
            "title": "popup title 2",
            "content": "<p>HTML Content</p><p><b>with FAT text...</b></p>",
            "enabled": true,
            "button": {
              "confirmLabel": "Click!"
            },
            "action": {
              "link": "https://shopgate.com"
            },
            "trigger": {
              "type": "appStarts",
              "value": 1
            },
            "maxOccurrenceCount": 1,
            "maxRejectionCount": 1
          },
          {
            "id": "popupId3",
            "title": "King of checkouts",
            "content": "<p>you're the <b>BEST</b> customer!</p><img style='margin: 0 auto' src='https://c.tenor.com/xzpk6hLD8LQAAAAM/cha-ching-money.gif' />",
            "enabled": true,
            "button": {
              "confirmLabel": "Safe!",
              "dismissLabel": "Nope"
            },
            "action": {
              "link": "https://shopgate.com"
            },
            "trigger": {
              "type": "ordersPlaced",
              "value": 4
            },
            "maxOccurrenceCount": 2,
            "maxRejectionCount": 2
          },
          {
            "id": "popupId4",
            "title": "timer popup",
            "content": "<p>this is a <b>TIMER</b> popup!</p><img style='margin: 0 auto' src='https://c.tenor.com/xElcwltRkVYAAAAM/sheesh-wow.gif' />",
            "enabled": true,
            "button": {
              "confirmLabel": "OK",
              "dismissLabel": "NO"
            },
            "action": {
              "link": "https://shopgate.com"
            },
            "trigger": {
              "type": "timeInterval",
              "value": 1
            },
            "maxOccurrenceCount": 2,
            "maxRejectionCount": 2
          }
        ]
      },
      "params": {
        "type": "json",
        "label": "Configurable popup settings"
      }
    }
  }
}
